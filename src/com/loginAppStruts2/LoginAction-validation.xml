<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE validators PUBLIC
        "-//OpenSymphony Group//XWork Validator 1.0.3//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.3.dtd">

<validators>

    <field name="userName">
        <field-validator type="requiredstring">
            <message>User Name is required and cannot be blank!!</message>
        </field-validator>
    </field>

    <field name="password">
        <field-validator type="requiredstring">
            <message>Password is required and cannot be blank!!</message>
        </field-validator>
    </field>

</validators>